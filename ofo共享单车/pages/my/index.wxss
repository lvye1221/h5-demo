/**index.wxss**/

.container {
	width: 100%;
	height: 100vh;
	background-color: #FECF21;
	overflow: hidden;
	position: relative;
}

.panel {
	position: absolute;
	top: 10vh;
	left: -50%;
	width: 200%;
	height: 90vh;
	background-color: #FFFFFF;
	border-top-left-radius: 50%;
	border-top-right-radius: 50%;
	z-index: 1;
}

.head {
	position: absolute;
	top: 2vh;
	left: 20%;
	z-index: 100;
}

.head image {
	width: 200rpx;
	height: 200rpx;
}


.list {
	position: absolute;
	top: 25vh;
	left: 20%;
	z-index: 101;
	/* border: 1px solid red; */

	width: 60%;
	height: 70vh;
}

.phone {
	font-size: 50rpx;
	font-weight: 600;
}

.phone image {
	margin-left: 20rpx;
	width: 50rpx;
	height: 50rpx;
}









