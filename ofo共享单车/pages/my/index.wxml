<view class="container">

  <view class="panel">
  </view>

  
  <view class="head">
	<image src="/ofo_img/个人中心img/head_icon.png" mode="aspectFit"></image>
  </view>

  <view class="list">
	<!-- 电话号码 -->
	<view class="phone">
	  <text>186****5473</text>
	  <image src="/ofo_img/个人中心img/vip_icon.png" mode="aspectFit"></image>
	</view>

	<!-- 认证信息 -->
	<view class="cert">
	  <text>已认证·信用分</text>
	  <text>100</text>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/schedule_icon.png" mode="aspectFit"></image>
	  <text>我的行程</text>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/wallet_icon.png" mode="aspectFit"></image>
	  <text>我的钱包</text>
	  <text class="money">0元</text>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/invite_icon.png" mode="aspectFit"></image>
	  <text>邀请好友</text>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/exchange_icon.png" mode="aspectFit"></image>
	  <text>兑优惠券</text>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/message_icon.png" mode="aspectFit"></image>
	  <text>我的消息</text>
	  <view class="circle"> </view>
	</view>


	<view class="item">
	  <image src="/ofo_img/个人中心img/guide_icon.png" mode="aspectFit"></image>
	  <text>使用指南</text>
	</view>

  </view>
 
</view>



