<!--index.wxml-->
<view class="container">
  <map id="ofoMap" 
       latitude="{{latitude}}"  
       longitude="{{longitude}}" 
       scale="{{scale}}"
	   controls="{{controls}}"
	   bindcontroltap="bindcontroltap"
	   markers="{{markers}}"
	   bindmarkertap="bindmarkertap"
	   polyline="{{polyline}}"
	   bindregionchange="bindregionchange"
       show-location />    
</view>
