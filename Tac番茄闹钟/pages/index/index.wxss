/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0;
} 

.title-1 {
	color: black;
	font-weight: bold;
	font-size: 50rpx;
	padding: 100rpx 20rpx 20rpx;
}

.title-2 {
	color: #9E9E9E;
	font-size: 40rpx;
	padding: 10rpx;
}

.border-right {
	border-right: 2px solid #F9F9F9;
}

.border-bottom {
	border-bottom: 2px solid #F9F9F9;
}


.item-container {
	width: 80%;
	padding-top: 80rpx;

	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}

.item {
	float: left;
	width: 25%;
	height: 180rpx;

	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx;

	/* border: silver 3px solid; */
	/* box-sizing: border-box; */

}

.item image {
	width: 150rpx;
	height: 150rpx;
}

.item text {
	color: #999999;
}


.btn {
	padding: 100rpx;
}

.btn button {
	background: white;
	border-radius: 120rpx;
	font-size: 40rpx;
	
	width: 300rpx;
	height: 100rpx;

	color: #556EA0;
	border: 1px solid #556EA0;

}




